

<% if @book.errors.any? %>
  <h2 class="text-danger">
    <%= @book.errors.count %>error prohibited this obj from being saved:
  </h2><br>
  <ul class="text-danger">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
  </ul>

  <div class='container px-5 px-sm-0'>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user, book: @book_new %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2 class="border-bottom" style="padding10px;"></h2>

        <table class="table table-striped">
          <thead>
            <h2>Book detail</h2>
          </thead>

          <tbody>
            <tr>
              <td><%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, size: "30x30", fallback: "no_image.jpg" %><br>
                  <%= link_to @book.user.name, user_path(@book.user.id) %></td>
                <% end %>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><span><%= @book.body %></span></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class:'btn btn-success' %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class:'btn btn-danger', data: {confirm: "本当に消しますか？"} %></td>
              <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
