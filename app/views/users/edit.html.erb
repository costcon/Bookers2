<div class="mx-auto" style="width: 200px;">
  <% if @user.errors.any? %>
    <h2 class="text-danger">
    <%= @user.errors.count %>error prohibited this obj from being saved:
    </h2>
    <ul class="text-danger">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    </ul>
    <% end %>
  <% end %>
  <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
    <label for="Name">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"Name" %><br>
    <label for="profile_image">Image</label><br>
    <%= f.attachment_field :profile_image %><br>
    <label for="Introduction">Introduction</label><br>
    <%= f.text_area :introduction, id:"Introduction" %><br>

    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
  </div>
