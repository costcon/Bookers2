<div class="mx-auto" style="width: 200px;">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <h2>User info</h2>
  <%= form_with model:@user, local:true do |f| %>
    <label for="Name">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %><br>
    <label for="inputImage">Image</label><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
    <label for="Introduction">Introduction</label><br>
    <%= f.text_area :introduction, autofocus: true, id:"Introduction", placeholder:"Introduction"%><br>

    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
  </div>
