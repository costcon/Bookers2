        <h2>User info</h2>
          <table class='table'>
            <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </table>
            <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog text-secondary"></i>
            <% end %>
          <h2>New book</h2>
          <%= form_with model: book, id: 'new_book', class: 'new_book', local: true do |f| %>
            <div class="field">
              <%= f.label :Title %><br />
              <%= f.text_field :title, autofocus: true %>
            </div>
            <div class="field">
              <%= f.label :Opinion %><br />
              <%= f.text_area :body %>
            </div>
            <div class="actions">
              <%= f.submit "Create Book", class: 'btn btn-success' %>
            </div>
          <% end %>

</main>