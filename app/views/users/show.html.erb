

<% if @user.errors.any? %>
  <h2 class="text-danger">
    <%= @user.errors.count %>error prohibited this obj from being saved:
  </h2><br>
  <ul class="text-danger">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
  </ul>


  <div class='container px-5 px-sm-0'>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user, book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2 class="border-bottom" style="padding10px;">Books</h2>

        <table class="table table-striped">
          <thead>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
                <% end %>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><span><%= book.body %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



