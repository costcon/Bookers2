<!DOCTYPE html>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
  ã€€<% end %>
      <div class="container">
        <%= link_to "Bookers", root_path,class:"navbar-brand mr-auto text-light" %>
        <button class="navbar-toggler" type="button"
          data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navmenu1">
          <div class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <%= link_to user_path(current_user.id),class:"nav-item nav-link text-light" do %>
              <i class="fas fa-home"></i>Home
            <% end %>
            <%= link_to users_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-link"></i>Users</a>
            <% end %>
            <%= link_to books_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-book"></i>Books</a>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-sign-out-alt"></i>logout</a>
            <% end %>
          </div>
        </div>
      </div>

            <% else %>
            <%= link_to root_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-home"></i>Home</a>
            <% end %>
            <%= link_to home_about_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-link"></i>About</a>
            <% end %>
            <%= link_to new_user_registration_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-user-plus"></i>sign up</a>
            <% end %>
            <%= link_to new_user_session_path,class:"nav-item nav-link text-light" do %>
              <i class="fas fa-sign-in-alt"></i>login</a>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>
  </nav>
    <%= yield %>

    <footer class="mx-auto" style="width: 200px;">
      <br>CopyRight Infratop.inc
    </footer>
</html>
